<% if current_user %>
	<% if current_user.id == restaurant.user_id %>
		<%= link_to 'Delete', restaurant_path(restaurant), method: :delete %> |
		<%= link_to 'Edit', edit_restaurant_path(restaurant) %> |
	<% end %>
	<% if restaurant.is_reviewable_by?(current_user) %>
	<%= link_to 'Review', new_restaurant_review_path(restaurant), class: 'new-review-link' %>
	<% end %>
<% end %>